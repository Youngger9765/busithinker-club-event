<!DOCTYPE html>
<html>
  <head>
    <title><%=@page_title || "BusithinkerGroup" %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

    <body>
      <div class="container">
        <h2>Busithinker-Club</h2>  
        <br>
        <% if current_user %>
          <%= link_to'登出', destroy_user_session_path, :method => :delete, :class =>"btn btn-default" %> |
          <%= link_to'修改密碼', edit_registration_path(:user), :class =>"btn btn-primary" %> |
            <% if current_user.is_admin?%>
              <%= link_to "Admin", admin_clubs_path, :class =>"btn btn-warning"%>
            <%end%>
          hello! <%= current_user.name%> 
        <% else %>
          <%= link_to'註冊', new_registration_path(:user), :class =>"btn btn-default" %> 
          |
          <%= link_to'登入', new_session_path(:user), :class =>"btn btn-primary" %> 
          |
        <% end %>
        <p style="color: green"><%= flash[:notice] %></p>
        <p style="color: red"><%= flash[:alert] %></p>
        <%= yield %>
      </div>
  </body>
</html>
